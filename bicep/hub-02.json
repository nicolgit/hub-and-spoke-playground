                "description": "The name of the gateway subnet"
              }
            },
            "deployGateway": {
              "type": "bool",
              "metadata": {
                "description": "Whether to deploy the VPN Gateway"
              }
            },
            "gatewaySku": {
              "type": "string",
              "defaultValue": "VpnGw1",
              "metadata": {
                "description": "The VPN Gateway SKU"
              }
            },
            "enableBgp": {
              "type": "bool",
              "defaultValue": false,
              "metadata": {
                "description": "Whether to enable BGP"
              }
            },
            "bgpAsn": {
              "type": "int",
              "defaultValue": 65515,
              "metadata": {
                "description": "BGP ASN number (optional - used when BGP is enabled)"
              }
            }
          },
          "variables": {
            "gatewayIPName": "[format('{0}-ip', parameters('gatewayName'))]"
          },
          "resources": [
            {
              "condition": "[parameters('deployGateway')]",
              "type": "Microsoft.Network/publicIPAddresses",
              "apiVersion": "2020-08-01",
              "name": "[variables('gatewayIPName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "Standard"
              },
              "properties": {
                "publicIPAllocationMethod": "Static"
              }
            },
            {
              "condition": "[parameters('deployGateway')]",
              "type": "Microsoft.Network/virtualNetworkGateways",
              "apiVersion": "2019-09-01",
              "name": "[parameters('gatewayName')]",
              "location": "[parameters('location')]",
              "properties": {
                "ipConfigurations": [
                  {
                    "name": "ipconfig1",
                    "properties": {
                      "subnet": {
                        "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('gatewaySubnetName'))]"
                      },
                      "publicIPAddress": {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('gatewayIPName'))]"
                      }
                    }
                  }
                ],
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "enableBgp": "[parameters('enableBgp')]",
                "bgpSettings": "[if(parameters('enableBgp'), createObject('asn', parameters('bgpAsn')), null())]",
                "sku": {
                  "name": "[parameters('gatewaySku')]",
                  "tier": "[parameters('gatewaySku')]"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('gatewayIPName'))]"
              ]
            }
          ],
          "outputs": {
            "gatewayId": {
              "type": "string",
              "value": "[if(parameters('deployGateway'), resourceId('Microsoft.Network/virtualNetworkGateways', parameters('gatewayName')), '')]"
            },
            "gatewayIPId": {
              "type": "string",
              "value": "[if(parameters('deployGateway'), resourceId('Microsoft.Network/publicIPAddresses', variables('gatewayIPName')), '')]"
            },
            "gatewayName": {
              "type": "string",
              "value": "[if(parameters('deployGateway'), parameters('gatewayName'), '')]"
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('hublabName'))]",
        "spokes"
      ]
    }
  ]
}